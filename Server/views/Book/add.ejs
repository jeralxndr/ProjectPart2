<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!--Content for Add Page-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1>Your Entries</h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Fajr</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter Fajr time" name="Name" required>
                    <select name="time" id="time">
                    <option value+"AM">AM</option>
                    <option value+"PM">PM</option>
                </div>
                <div class="form-group">
                    <label for="authorTextField">Dhuhr</label>
                    <input type="text" class="form-control" id="authorTextField" placeholder="Enter Dhuhr time" name="Author" required>
                </div>
                <div class="form-group">
                    <label for="publishedTextField">Asr</label>
                    <input type="text" class="form-control" id="publishedTextField" placeholder="Enter Asr time" name="Published" required>
                </div>
                <div class="form-group">
                    <label for="descriptionTextArea">Maghrib</label>
                    <textarea type="text" class="form-control" id="descriptionTextArea"  placeholder="Enter Maghrib time" name="Description" required></textarea>
                </div>
                <div class="form-group">
                    <label for="priceTextField">Isha</label>
                    <input type="text" class="form-control" id="priceTextField" placeholder="Enter Isha time" name="Price" required>
                </div>
                <button class="btn btn-primary" type="submit">Submit
                <i class="fas fa-edit"></i></button>  
                <button class="btn btn-warning" type="submit">Cancel
                    <i class="fas fa-undo"></i></button>    
            </form>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs%>