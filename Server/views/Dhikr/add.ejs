<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!--Content for Add Page-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter your Name" name="Name" required>
                </div>
                <div class="form-group">
                    <label for="contentTextField">Content</label>
                    <input type="text" class="form-control" id="contentTextField" placeholder="Enter the Content" name="content" required>
                </div>
                <div class="form-group">
                    <label for="categoryTextField">Category</label>
                    <input type="text" class="form-control" id="categoryTextField" placeholder="Enter Category of Dhikr" name="category" required>
                </div>
                <div class="form-group">
                    <label for="rewardTextArea">Reward</label>
                    <textarea type="text" class="form-control" id="rewardTextArea"  placeholder="Enter Estimated Reward" name="reward" required></textarea>
                </div>
                <div class="form-group">
                    <label for="timesRecitedTextField">Times Recited</label>
                    <input type="text" class="form-control" id="timesRecitedTextField" placeholder="Enter Number of Times Recited" name="timesRecited" required>
                </div>
                <button class="btn btn-primary" type="submit">Submit
                <i class="fas fa-edit"></i></button>  

                <a class="btn btn-warning" href="/dhikr">Cancel
                    <i class="fas fa-undo"></i>
                    </a>    
            </form>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs%>