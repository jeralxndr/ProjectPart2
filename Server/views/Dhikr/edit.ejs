<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!--Content for the edit Operation-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Dhikr Type</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter Fajr Time" name="Name" value="<%= Dhikr.Name %>" required>
                </div>
                <div class="form-group">
                    <label for="authorTextField">Content of Dhikr</label>
                    <input type="text" class="form-control" id="contentTextField" placeholder="Enter Dhuhr Time" name="content" value="<%= Dhikr.content %>" required>
                </div>
                <div class="form-group">
                    <label for="publishedTextField">Category of Dhikr</label>
                    <input type="text" class="form-control" id="categoryTextField" placeholder="Enter Asr Time" name="category" value="<%= Dhikr.category %>" required>
                </div>
                <div class="form-group">
                    <label for="descriptionTextArea">Dhikr Reward</label>
                    <textarea type="text" class="form-control" id="rewardTextArea"  placeholder="Enter Maghrib Time" name="reward" required><%= Dhikr.reward %></textarea>
                </div>
                <div class="form-group">
                    <label for="priceTextField">Times Recited</label>
                    <input type="text" class="form-control" id="timesRecitedTextField" placeholder="Enter Isha Time" name="timesRecited" value="<%= Dhikr.timesRecited %>" required>
                </div>
                <button class="btn btn-primary" type="submit">Submit
                <i class="fas fa-edit"></i></button>  
                <a class="btn btn-warning" href="/dhikr">Cancel
                    <i class="fas fa-undo"></i></a>    
            </form>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs%>